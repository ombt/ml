#
# this file should be copied under the HOME directory as .Rprofile.
# change the PHM_ROOT to point to where the scripts are located.
#
#####################################################################
#
# do not convert strings to factors by default
#
options(stringsAsFactors=FALSE)
#
# maximum number of lines to print
#
options(max.print=1000)
#
# start of session
#
.First <- function()
{
    #
    # required DB packages
    #
    library(xml2)
    library(httr)
    library(curl)
    library(gsubfn)
    library(proto)
    library(DBI)
    library(ggplot2)
    library(sqldf)
    library(plyr)
    library(dplyr)
    library(shiny)
    library(rJava)
    library(RJDBC)
    #
    # set root directory for PHM
    #
    Sys.setenv(DEV_ROOT = "C:/Users/rumormx/Documents/sandbox/phm/")
    #
    # load rlib functions.
    #
    rlib_base <- file.path(Sys.getenv("DEV_ROOT"), "rlib")
    rlib_files <- list.files(rlib_base, pattern=".*.R")
    #
    for (rlib_file in rlib_files)
    {
        source(file.path(rlib_base, rlib_file))
    }
}
#
# end of session
#
.Last <- function()
{
}
